print("""4TH INDUSTRIAL REVOLUTION

The 4th Industrial revolution is x, y and z


- MENU -
''''''''
Please choose one of the options below, and press enter.

1) Question & Answer 1
2) Question & Answer 2
3) Question & Answer 3
""")

answer = "empty"

while (answer == "empty"):
  userchoice = input()
  answer = "chosen"

  if(userchoice == "1"):
    print("PROMPT 1")
  elif(userchoice == "2"):
    print("PROMPT 2")
  elif(userchoice == "3"):
    print("PROMPT 3")
  else:
    print("INVALID INPUT, please try again")
    answer = "empty"
